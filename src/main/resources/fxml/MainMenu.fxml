<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="quiz.controller.MenuController">
    <top>
        <Label text="Main Menu" BorderPane.alignment="CENTER">
            <font>
                <Font name="Arial bold" size="40"/>
            </font>
        </Label>
    </top>
    <center>
        <VBox alignment="CENTER" spacing="30">
            <Button fx:id="switchToDefaultQuizGame" text="Play default Quiz" onAction="#switchToDefaultQuizGame" prefWidth="120"/>
            <Button fx:id="switchToCustomQuizGame" text="Play custom Quiz" onAction="#switchToCustomQuizGame" prefWidth="120"/>
            <Button fx:id="switchToQuizForm" text="Create Quiz" onAction="#switchToQuizForm" prefWidth="120"/>
            <Button fx:id="handleExit" text="Exit" onAction="#handleExit" prefWidth="120"/>
        </VBox>
    </center>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</BorderPane>
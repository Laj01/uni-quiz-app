<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="quiz.controller.QuizSelecterController">
    <top>
        <Label text="New Quiz Game" BorderPane.alignment="CENTER">
            <font>
                <Font name="Arial bold" size="40" />
            </font>
        </Label>
    </top>
    <center>
        <VBox alignment="CENTER" spacing="30">
         <Button fx:id="DefaultJson" onAction="#selectDefaultJson" prefWidth="120" text="Play default Quiz"/>
         <Button fx:id="CustomJson" onAction="#selectCustomJson" prefWidth="120" text="Play custom Quiz"/>
            <Button fx:id="switchToMainMenu" onAction="#switchToMainMenu" prefWidth="120" text="Back to main menu" />
        </VBox>
    </center>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</BorderPane>
